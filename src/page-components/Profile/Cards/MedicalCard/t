  useEffect(() => {
    const fetchOptions = async () => {
      if (searchTerm.trim() === '') {
        setApiOptions([]);
        return;
      }

      try {
        const response = await fetch(
          `https://fhirserver.example.com/Condition?code=${searchTerm}`
        );
        const data = await response.json();
        const options = data.entry.map((entry) => entry.resource.code.text);
        setApiOptions(options);
      } catch (error) {
        console.error('Error fetching conditions:', error);
      }
    };

    // Debounce API call to avoid excessive requests
    const debounceTimeout = setTimeout(fetchOptions, 300);

    return () => clearTimeout(debounceTimeout);
  }, [searchTerm]);